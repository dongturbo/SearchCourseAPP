<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="general_left_text" parent="@style/general_wrap">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/deep_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
	<style name="DialogList" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/ic_dlg_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxHeight">220.0dip</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:width">280.0dip</item>
    </style>
    <style name="general_right_text" parent="@style/general_wrap">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@color/lucency_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tips_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tips_new" parent="@style/tips_wrap">
        <item name="android:background">@drawable/ic_tips_big_new</item>
        <item name="android:layout_width">26.0dip</item>
        <item name="android:layout_height">15.0dip</item>
    </style>

    <style name="general_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="general_list_tab" parent="@style/general_wrap">
        <item name="android:textSize">14.0dip</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">12.0dip</item>
    </style>

    <style name="general_list_tab_red" parent="@style/general_list_tab">
        <item name="android:textColor">@color/list_tab_red</item>
        <item name="android:background">@drawable/ic_tab_background_red</item>
    </style>

    <style name="general_list_tab_blue" parent="@style/general_list_tab">
        <item name="android:textColor">@color/list_tab_blue</item>
        <item name="android:background">@drawable/ic_tab_background_blue</item>
    </style>

    <style name="general_item_layout" parent="@style/general_wrap">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:minHeight">50.0dip</item>
    </style>

    <style name="general_item_layout_top" parent="@style/general_item_layout">
        <item name="android:background">@drawable/list_item_top_selector</item>
    </style>

    <style name="general_item_layout_middle" parent="@style/general_item_layout">
        <item name="android:background">@drawable/list_item_middle_selector</item>
    </style>

    <style name="general_item_layout_bottom" parent="@style/general_item_layout">
        <item name="android:background">@drawable/list_item_selector_no_divider</item>
    </style>

    <style name="general_item_layout_middle_unclick" parent="@style/general_item_layout_middle">
        <item name="android:clickable">false</item>
    </style>

    <style name="general_item_layout_top_unclick" parent="@style/general_item_layout_top">
        <item name="android:clickable">false</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="detail_course_item_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">19.0dip</item>
    </style>

    <style name="detail_course_right_text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/deep_grey</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="wrap_parent_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detail_course_left_text" parent="@style/wrap_parent_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:drawablePadding">10.0dip</item>
    </style>

    <style name="general_tips_text">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="normal_drawable_left_text" parent="@style/wrap_parent_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10.0dip</item>
    </style>

</resources>